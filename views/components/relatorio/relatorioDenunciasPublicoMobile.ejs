<% denuncias.forEach(denuncia => { %>
    <% let denunciaShortString = ""; %>
    <% if(denuncia.descricao.substr(71, 72)) {
        denunciaShortString = denuncia.descricao.substr(0, 70) + "...";
    } else {
        denunciaShortString = denuncia.descricao.substr(0, 70);
    }%>
    <% let denunciaFullString = denuncia.descricao;%>
    <% let denunciaShortHandle = denuncia.datahoraSubmissao.toLocaleString() + ' - ' + denunciaShortString;%>
    <div class="card denunciaCard">
        <h5 class="card-header denunciaCardHeader">
            <a class="collapsed d-block" data-toggle="collapse" href="#<%= denuncia._id%>" aria-expanded="true" aria-controls="collapse-collapsed" id="<%= denuncia._id%>Collapser">
                <i class="fa fa-chevron-down pull-right"></i>
                <%= denunciaShortHandle %>
            </a>
        </h5>
        <div id="<%= denuncia._id%>" class="collapse" aria-labelledby="heading-collapsed">
            <div class="card-body">
                <%= denunciaFullString %>
            </div>
        </div>
    </div>
<%});%>
